
#include<bits/stdc++.h>
using namespace std;
#define lli long long int
#define ulli unsigned long long int
#define MOD 1000000007
int main()
{

            int n,steps=0;;
            cin>>n;
            int arr[n];
            for(int i=0;i<n;i++){
                cin>>arr[i];
            }

            for(int i=0;i<=n-2;i++){
                if(i+2 <= n-1 and arr[i+2]==0){
                    i++;
                }
                steps++;
            }

            cout<<steps<<endl;

}


